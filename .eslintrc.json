{
  "env": {
    "es2021": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "react-hooks",
    "prettier"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "prefer-arrow-callback": "error",
    "no-console": "error",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".tsx"
        ]
      }
    ],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": [
      "off"
    ],
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": "error"
  },
  "settings": { // Para que o React consiga entender arquivos Typescript é necessário acrescentar essa configuração, por padrão vai apresentar um erro dizendo que as importações de arquivos Typescript não foram resolvidas. (eslint-import-resolver-typescript)
    "import/resolver": {
      "typescript": {}
    }
  }
}
